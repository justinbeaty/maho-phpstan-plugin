{
    "name": "mahocommerce/maho-phpstan-plugin",
    "description": "Extension for PHPStan to allow static analysis of Maho projects.",
    "type": "phpstan-extension",
    "license": "MIT",
    "require": {
        "php": ">= 8.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Maho\\PHPStanPlugin\\": "src/"
        }
    },
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    }
}
